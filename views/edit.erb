    <fieldset>
      <label for='content'>Content</label>
      <textarea class='custom-input' rows='6' name='content' id='content'><%= @content %></textarea>
    </fieldset>
    <div class='btn-container'>
      <a class='btn' href='/'>ï¸ŽBack to homepage</a>
      <input class='btn-submit' type='submit' value='save changes'>
    </div>
  </form>
</div>
</section>