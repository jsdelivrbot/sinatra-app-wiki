<header class='header-center'>
  <h3>You are currently editing the post</h3> 
  <h1>"<%= @title%>"</h1>
</header>

<section class='form'>
<div>
  <form method='POST' action='/<%= @title %>'>
    <!-- because he cannot put a put method on our form -->
